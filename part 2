import javax.swing.JOptionPane;




public class hellowrldGUI
{
 
	 public static void main(String[] args) {
		 
		 
		 JOptionPane.showMessageDialog(null, "Welcome to the Logic Gate calculator!	\n"
					+ "this program will take your input for two true or false values and determine the rusults for the logic gates.");
		
		 
		 
	
		String inputA = JOptionPane.showInputDialog("Enter the first boolean value, either true or false: "); 
		boolean a = Boolean.parseBoolean(inputA);
		
	
		
		String inputB = JOptionPane.showInputDialog("Enter the first boolean value, either true or false: "); 
		boolean b = Boolean.parseBoolean(inputB);
	
		boolean Andgate = (a&&b);
		boolean or = a||b;
		boolean nand = !(a&&b); 
		
		
	
		
	String rusultMessage = "RUSULTS:\n\n" + "AND GATE = " + Andgate + "\n" +
	"OR GATE = " +or +"\n"+
	"NAND GATE = " + nand+"\n";
		
	{
		}
		
	 JOptionPane.showMessageDialog(null, rusultMessage);
		}
}
	 

		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	
	
