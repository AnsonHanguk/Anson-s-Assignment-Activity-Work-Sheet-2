	 public static void main(String[] args) {
		 
		 
		 System.out.println("Welcome to the Logic Gate calculator!	\n"
					+ "this program will take your input for two true or false values and determine the rusults for the logic gates.");
				
		 
		Scanner in = new Scanner (System.in); 
		System.out.println("Enter the first boolean value, either true or false: "); 
		boolean a = in.nextBoolean();
		
	
		
		System.out.println("Great! Now enter the second boolean value, either true or false: "); 
		boolean b = in.nextBoolean();
	
		boolean rusult = (a&&b);
		boolean or = a||b;
		boolean nand = !(a&&b); 
		
		
	
		{
		System.out.println ("Wonderfull, here are the rusults,\n\nThe and gate is = " + rusult+"\n");
		System.out.println ("The or gate = " + or +"\n");
		System.out.println ("The NAND gate = " + nand+"\n");
		
		in.close();
		}
		}
		
